<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <!-- Progress bar style -->
    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/progress_bar_width</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Item attribute untuk recycler view -->
    <style name="ItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Poster image untuk data -->
    <style name="PosterImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Keyword text untuk keyword tracker -->
    <style name="KeywordText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Text untuk custom tab item di TabLayout -->
    <style name="TextTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- String untuk representasi no data displayed -->
    <style name="NoDataText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Widget item yg merepresentasikan WidgetItemTitle -->
    <style name="WidgetItemTitleText">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- display info detail text -->
    <style name="DetailedText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/inner_view_margin</item>
        <item name="android:layout_marginRight">@dimen/inner_view_margin</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- display scroll view info title text -->
    <style name="DetailedScrollViewTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/item_section_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
    </style>

    <!-- display scroll view into content text -->
    <style name="DetailedScrollViewContentText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- App theme no action bar (untuk dapat menggunakan custom toolbar tanpa makan space extra)-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style untuk toolbar -->
    <style name="AppToolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <!-- Style untuk text appearance toolbar title -->
    <style name="AppToolbarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
