<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_tv_show_items_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".TvShowFragment">

        <LinearLayout
            android:id="@+id/tv_show_search_keyword_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                style="@style/KeywordText"
                android:layout_weight="1"
                android:text="@string/keyword_title"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/item_section_title"/>

            <TextView
                android:id="@+id/tv_show_search_keyword_content"
                style="@style/KeywordText"
                android:layout_weight="2"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:paddingRight="@dimen/inner_view_margin"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tv_shows_item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:scrollbars="vertical"
            tools:listitem="@layout/movie_items" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressBar" />

    <TextView
        android:id="@+id/tv_show_empty_state_text"
        style="@style/NoDataText"
        tools:text="@string/no_tv_show_data_shown"/>

</RelativeLayout>